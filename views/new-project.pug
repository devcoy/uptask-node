extends layout
block content 
  .contenido-principal
    h1 #{pageName}
    if errors
      each error in errors
        .alerta.error= error.text
        
      
      
        
            
    form.agregar-proyecto(action="/nuevo-proyecto" method="post")
      .campo
        label(for="name") Nombre Proyecto:
        input(type="text" id="name" name="name" placeholder="Nombre proyecto")
      .campo.enviar
        input(type="submit" value="Agregar" class="boton")  